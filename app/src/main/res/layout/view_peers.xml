<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/peersLayoutCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/peersLogoImageView"
            android:layout_width="@dimen/peer_logo_image_size"
            android:layout_height="@dimen/peer_logo_image_size"
            android:background="@drawable/rounded_rectangle" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/peersNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/peersLayoutCardView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/peer_name_text_size"
        tools:text="Zap" />

</RelativeLayout>