<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/transactionRootView"
              android:layout_width="match_parent"
              android:layout_height="65dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="5dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/bg_clickable_item"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingStart="5dp"
              android:paddingTop="10dp"
              android:paddingEnd="10dp"
              android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:minWidth="45dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/transactionTypeIcon"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:tint="@color/lightningOrange"
            app:srcCompat="@drawable/ic_onchain_black_24dp"/>

        <TextView
            android:id="@+id/timeOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="12:23"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:paddingStart="5dp">

        <TextView
            android:id="@+id/transactionState"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="State"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/transactionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Description"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transactionAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ 157 sat"
            android:textAlignment="textEnd"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/transactionFeeAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fee: 0 sat"
            android:textAlignment="textEnd"
            android:textSize="10sp"/>
    </LinearLayout>

</LinearLayout>