<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />
            <gradient
                android:startColor="@color/seaBlueGradient3"
                android:centerColor="@color/seaBlueGradient3"
                android:centerY="0.75"
                android:endColor="@color/seaBlueGradient3"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="3dip" />
                <gradient
                    android:startColor="@color/lightningBlueGradient"
                    android:endColor="@color/lightningBlue"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>

</layer-list>