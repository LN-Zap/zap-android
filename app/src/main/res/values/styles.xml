<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/seaBlue</item>
        <item name="colorPrimaryDark">@color/deepSeaBlue</item>
        <item name="colorAccent">@color/lightningOrange</item>
        <item name="android:colorBackground">@color/deepSeaBlue</item>
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:dialogTheme">@style/ZapDialog</item>
        <item name="android:alertDialogTheme">@style/ZapDialog</item>
        <item name="dialogTheme">@style/ZapDialog</item>
        <item name="alertDialogTheme">@style/ZapDialog</item>
    </style>

    <!-- Base application theme with action bar. -->
    <style name="AppThemeWithActionBar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/seaBlue</item>
        <item name="colorPrimaryDark">@color/deepSeaBlue</item>
        <item name="colorAccent">@color/lightningOrange</item>
        <item name="android:colorBackground">@color/deepSeaBlue</item>
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:dialogTheme">@style/ZapDialog</item>
        <item name="android:alertDialogTheme">@style/ZapDialog</item>
        <item name="dialogTheme">@style/ZapDialog</item>
        <item name="alertDialogTheme">@style/ZapDialog</item>
    </style>


    <!-- Theme for the QR-Code scanner activity. -->
    <style name="AppOverlayTheme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/seaBlue</item>
        <item name="colorPrimaryDark">@color/deepSeaBlue</item>
        <item name="colorAccent">@color/lightningOrange</item>
        <item name="android:colorBackground">@color/deepSeaBlue</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:dialogTheme">@style/ZapDialog</item>
        <item name="android:alertDialogTheme">@style/ZapDialog</item>
        <item name="dialogTheme">@style/ZapDialog</item>
        <item name="alertDialogTheme">@style/ZapDialog</item>
    </style>


    <!-- Style for the toolbar at the top of QR-Code scanner activity. -->
    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support Library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Style for all dialogs. If we use Theme.AppCompat.Dialog as parent instead, the dialog size adapts to wrap content -->
    <style name="ZapDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/rounded_rectangle_seablue</item>
        <item name="colorAccent">@color/lightningOrange</item>
        <item name="android:windowBackground">@drawable/transparent_dialog_background</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <!-- A background image could be defined here. But with the modal Icons on top this does not really work.
             That's why we make it transparent and define the background in the layouts-->
        <item name="android:background">#00000000</item>
    </style>

    <style name="BaseZapBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorAccent">@color/lightningOrange</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ZapBottomSheetDialogTheme" parent="BaseZapBottomSheetDialog"/>


</resources>
